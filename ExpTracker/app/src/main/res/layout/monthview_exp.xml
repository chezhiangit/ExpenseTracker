<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingRight="1dp"
    android:paddingLeft="1dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/expDeleteButton"
        android:orientation="vertical"
        android:background="@color/material_grey_100">
        <TextView
            android:id="@+id/expName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="top"
            android:focusable="false"
            android:typeface="sans"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:background="@color/material_grey_100"
            android:maxLength="20"
            android:maxLines="1"
            android:text="Expense Name"
            />
        <TextView
            android:id="@+id/expDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="bottom"
            android:focusable="false"
            android:typeface="sans"
            android:gravity="bottom"
            android:layout_marginLeft="5dp"
            android:background="@color/material_grey_100"
            android:maxLength="15"
            android:maxLines="1"
            android:text="Expense Date"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/expAmount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textSize="18sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/expEditButton"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_menu_edit"
        android:background="@drawable/btn_bg_border"
        android:gravity="center"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/expDeleteButton"
        android:layout_toRightOf="@+id/expEditButton"
        android:src="@android:drawable/ic_delete"
        android:background="@drawable/btn_bg_border"
        android:gravity="center"
        />
</RelativeLayout>
